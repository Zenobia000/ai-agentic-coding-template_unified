{
  "name": "universal-ai-copilot-template",
  "version": "1.0.0",
  "description": "Universal AI copilot workflow template supporting Cursor, Claude Code, and Gemini CLI",
  "scripts": {
    "init": "./scripts/init-day1.sh",
    "setup": "node scripts/setup.js",
    "publish": "node scripts/publish.js",
    "sync-commands": "./scripts/sync-commands.sh",
    "ai-sync": "node scripts/sync-ai-config.js && npm run template:init",
    "ai-sync:cursor": "node scripts/sync-ai-config.js --tool cursor",
    "ai-sync:claude": "node scripts/sync-ai-config.js --tool claude",
    "ai-sync:gemini": "node scripts/sync-ai-config.js --tool gemini",
    "ai-verify": "node scripts/verify-setup.js",
    "template:init": "node scripts/template-generator.js --init",
    "template:generate": "node scripts/template-generator.js"
  },
  "keywords": [
    "ai",
    "copilot",
    "cursor",
    "claude",
    "gemini",
    "workflow",
    "automation"
  ],
  "author": "Universal AI Copilot Template",
  "license": "MIT",
  "dependencies": {
    "js-yaml": "^4.1.0",
    "mustache": "^4.2.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/universal-ai-copilot-template.git"
  }
}